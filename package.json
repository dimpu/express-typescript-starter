{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "DIMPU ARAVIND BUDDHA",
  "license": "MIT",
  "scripts": {
    "start": "npm run watch",
    "build": "npx tsc -p .",
    "watch": "npx nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "test": "jest --forceExit --coverage --verbose",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy.public": "ts-node copyPublic.ts",
    "test.watch": "npm run test -- --watchAll"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-edge": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sqlite3": "^4.0.2",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/passport": "^0.4.3",
    "@types/passport-facebook": "^2.1.7",
    "@types/passport-local": "^1.0.32",
    "@types/request": "^2.47.0",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^22.0.4",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.0",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
